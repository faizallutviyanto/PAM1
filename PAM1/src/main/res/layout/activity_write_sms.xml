<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pertemuansatu.android.asdos.latihandesign.WriteSMSActivity">

    <TextView
        android:id="@+id/write_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write SMS" />

    <EditText
        android:id="@+id/write_txt_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/write_txt_title"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/write_txt_message"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/write_txt_number"
        android:gravity="start"
        android:hint="Write here"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send" />
    </RelativeLayout>
</RelativeLayout>
